{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",        
    "lib": ["es6", "dom"],             
    "jsx": "react",                           
    "strict": true,                          
    "allowSyntheticDefaultImports": true,  
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true                           
  },
  "exclude": [
    "node_modules"
  ]
} 